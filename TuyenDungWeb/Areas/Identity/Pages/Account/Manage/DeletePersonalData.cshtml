@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Xóa dữ liệu cá nhân";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Xóa dữ liệu này sẽ xóa vĩnh viễn tài khoản của bạn và điều này không thể khôi phục được.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mật khẩu..." />
                <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Xóa dữ liệu và xóa tài khoản của tôi</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
