<!-- Header End -->
<div class="container-xxl py-5 bg-dark page-header mb-5">
    <div class="container my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown"></h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-uppercase">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Company</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Header End -->
<!-- Category Start -->
<div class="container-xxl py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Top @Model.CompanyList.Count() công ty có đánh giá tốt nhất</h1>
        <div class="row g-4">
            @foreach (var company in Model.CompanyList)
            {

                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                    <a class="cat-item rounded p-4" href="~/Customer/Company/Detail/@company.Name">
                        @foreach (var companyImage in Model.CompanyImageList)
                        {
                            if (company.Id == companyImage.CompanyId)
                            {
                                <img src="@companyImage.ImageUrl" class="company-image mb-4" style="width: 80px; height:80px;" />
                                break;
                            }
                        }
                        <h6 class="mb-3">@company.Name.ToUpperInvariant()</h6>
                        @foreach (var countJobPost in Model.jobPostCount)
                        {
                            if (company.Id == countJobPost.CompanyId)
                            {
                                if (countJobPost.jobPostCount != 0)
                                {
                                    <p class="mb-0">Đã đăng @countJobPost.jobPostCount tin tuyển dụng</p>
                                }
                                else
                                {
                                    <p class="mb-0">Chưa đăng tin tuyển dụng nào</p>
                                }
                                break;
                            }
                        }
                    </a>
                </div>
            }
